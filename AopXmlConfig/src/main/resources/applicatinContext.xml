<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">


<aop:aspectj-autoproxy></aop:aspectj-autoproxy>

<bean id="opBean" class="com.check.Operation"></bean>
<bean id="trackAspect" class="com.check.TrackOperation"></bean>

<aop:config>

<aop:aspect id="myaspect" ref="trackAspect">


<!-- @Before 
<aop:pointcut expression="execution(* com.check.Operation.*(..))"  id="pointcutbefore"/>
<aop:before method="myadvice" pointcut-ref="pointcutbefore"></aop:before>
 -->
<!-- @After -->
<aop:pointcut expression="execution(* com.check.Operation.*(..))"  id="pointcutafter"/>
<aop:after method="myadvice" pointcut-ref="pointcutafter"></aop:after>

</aop:aspect>
</aop:config>


</beans>
